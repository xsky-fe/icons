{
  "compilerOptions": {
    "outDir": "./lib/",
    "module": "esnext",
    "declaration": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "react"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}